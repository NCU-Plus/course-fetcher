{
  "name": "course-fetcher",
  "version": "1.0.1",
  "description": "This is a script to get course data from NCU Course Schedule Planning System, and update open api course database.",
  "main": "dist/index.js",
  "scripts": {
    "start": "node  ./dist/index.js",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "watch": "tsc --watch",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "dependencies": {
    "axios": "^0.21.3",
    "cheerio": "^1.0.0-rc.5",
    "dotenv": "^10.0.0",
    "log4js": "^6.3.0",
    "mariadb": "^2.5.5",
    "rimraf": "^3.0.2",
    "sequelize": "^6.13.0",
    "sqlite3": "^5.0.2",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@types/node": "^17.0.10",
    "@types/validator": "^13.7.1",
    "@types/xml2js": "^0.4.9",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.5.1"
  }
}
